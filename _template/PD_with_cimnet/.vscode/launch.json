    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run (debug)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/pd.exe",
            "args": ["-b1,1.05,0.01", "-L10"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/Program Files/Dev-Cpp/MinGW64/bin/gdb32.exe",
            "setupCommands": [
                {
                    "description": "Pretty print",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}